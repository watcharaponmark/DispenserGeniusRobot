<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.markgo.dispensergeniusrobot.dispensergeniusrobot">

    <!-- เชื่อมต่อ network -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".menu.DiarrheaActivity" />
        <activity android:name=".menu.PainkillerActivity" />
        <activity android:name=".menu.TravelSicknessTabletsActivity" />
        <activity android:name=".menu.AntihistamineActivity"></activity>
    </application>

</manifest>